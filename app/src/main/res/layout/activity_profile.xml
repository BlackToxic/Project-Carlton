<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectcarlton.fbljk.projectcarlton.Activities.Core.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_userimage"
        android:layout_width="111dp"
        android:layout_height="129dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/ic_person_black_24dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/roboto_black"
        android:text="FelixBaum"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_userimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_userimage"
        app:layout_constraintVertical_bias="0.402" />

    <TextView
        android:id="@+id/profile_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="baum.felix@gmx.de"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/profile_username"
        app:layout_constraintTop_toBottomOf="@id/profile_username" />

    <View
        android:id="@+id/profile_spacer"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_userimage" />

    <Button
        android:id="@+id/profile_settings"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:text="Profileinstellungen"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_black"
        android:gravity="start|center_vertical"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userimage"
        app:layout_constraintVertical_bias="0.974" />

    <TextView
        android:id="@+id/profile_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_black"
        android:text="Push-Mitteilungen"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/profile_settings"
        app:layout_constraintLeft_toLeftOf="@id/profile_settings"
        app:layout_constraintVertical_bias="0.974" />

    <TextView
        android:id="@+id/profile_pushdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto"
        android:text="An"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/profile_push"
        app:layout_constraintLeft_toLeftOf="@id/profile_push" />

    <Switch
        android:id="@+id/profile_pushtoggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_push"
        app:layout_constraintBottom_toBottomOf="@id/profile_push"
        app:layout_constraintRight_toRightOf="@id/profile_settings"
        app:layout_constraintVertical_bias="0.974"/>

    <Button
        android:id="@+id/profile_logoutbutton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/logoutbutton"
        android:textColor="@android:color/white"
        android:text="Abmelden"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userimage"
        app:layout_constraintVertical_bias="0.974" />


</android.support.constraint.ConstraintLayout>