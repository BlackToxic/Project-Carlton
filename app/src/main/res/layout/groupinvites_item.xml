<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/inviteitem_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inviteitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/inviteitem_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inviteitem_name"
            android:layout_marginTop="-2dp"
            android:paddingStart="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#7f7f7f"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inviteitem_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/inviteitem_layout1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inviteitem_check_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toStartOf="@id/inviteitem_uncheck_button"
            android:background="@drawable/ic_check_black_24dp" />

        <Button
            android:id="@+id/inviteitem_uncheck_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close_black_24dp"/>

    </RelativeLayout>


</RelativeLayout>